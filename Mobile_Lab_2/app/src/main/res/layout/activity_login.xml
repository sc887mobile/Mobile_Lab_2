<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    style="@style/EditTextStyle"
    tools:context="project.sarah.mobile_lab_2.LoginActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="35dp"
        android:text="ChoIstagram"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/err_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appName"
        android:layout_centerHorizontal="true"
        android:text="your login detail is wrong. please check again"
        android:textColor="@color/red"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/err_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:inputType="textPersonName"
        android:text="Username"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_id"
        android:layout_below="@+id/appName"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="pw"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/btn"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Login"
        android:textColor="@android:color/black" />

    <View
        android:id="@+id/line_login"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_login"
        android:layout_centerInParent="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_fblogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_login"
        android:layout_below="@+id/line_login"
        android:layout_marginRight="70dp"
        android:layout_marginTop="13dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="facebook login"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_fblogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Forgot your password? Click this"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>